{
    "name": "loevgaard/dandomain-api",
    "type": "library",
    "description": "Dandomain API Wrapper",
    "license": "MIT",
    "authors": [
        {
            "name": "Joachim LÃ¸vgaard",
            "email": "joachim@loevgaard.dk",
            "homepage": "http://www.loevgaard.dk"
        }
    ],
    "require": {
        "php": ">=7.1",
        "beberlei/assert": "^2.7.6",
        "guzzlehttp/guzzle": "^6.2",
        "symfony/options-resolver": "^3.0 || ^4.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~5.5||~6.0",
        "friendsofphp/php-cs-fixer": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Loevgaard\\Dandomain\\Api\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Loevgaard\\Dandomain\\Api\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "./vendor/bin/php-cs-fixer fix --verbose --dry-run",
        "fix-style": "./vendor/bin/php-cs-fixer fix --verbose"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
